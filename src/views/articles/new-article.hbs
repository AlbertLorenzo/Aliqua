<br>
<div id="create-article">
    <br>
    <div class="container">
        <div class="col-m4-4 mx-auto">
            <div class="card">
                <card class="card-header">
                    <h3>Crear artículo</h3>
                </card>
                <div class="card-body">
                    <form action="/articles/new-article" method="POST" id="new-article">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="Titulo" name="title">
                        </div>
                        <div class="form-group">
                            <label for="author">Autor</label>
                            <input type="text" class="form-control" id="Autor" name="author">
                        </div>
                        <div class="form-group">
                            <label for="imgRoute">Ruta de la imagen</label>
                            <input type="text" class="form-control" id="Ruta imagen principal" name="routeImg">
                        </div>
                        <div class="form-group">
                            <label for="lead">Lead</label>
                            <textarea class="form-control" id="Lead" rows="3" name="lead"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="selectCategory">Categoría</label>
                            <select id="category" name="category" class="form-control">
                                <option value="videogames">Videojuegos</option>
                                <option value="music">Música</option>
                                <option value="technology">Tecnología</option>
                                <option value="sports">Deportes</option>
                                <option value="general">General</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="lead">Cuerpo de la noticia</label>
                            <textarea class="form-control" id="body" rows="4" name="body"></textarea>
                        </div>
                        <br>
                        <button type="button" class="btn btn-block" id="sendForm">Enviar</button>
                        <button id="text" class="btn btn-block no-enviar" data-pointer="text">Añadir texto</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<script src="/js/newArticleErrors.js"></script>
<script>
const els = document.querySelectorAll('.no-enviar')

els.forEach((el) => {
    el.addEventListener('click', function(e) {
    e.preventDefault()
})

})
</script>